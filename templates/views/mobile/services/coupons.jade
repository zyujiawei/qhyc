extends content-layout

block content
    div(data-role="page")#main
        div(data-role="header")
                include services-header.jade
                h1.
                    各种优惠券
            div(role="main",class="ui-content")
                ul(data-role="listview")
                    each post in data.posts
                        li
                            a(href="#postcontent",onclick="loadData(this)",class="postLink",data-transition="slide",data-json=post,data-image=post.image.filename,data-date=post._.publishedDate.format('YYYY-MM-DD'))
                                h2 #{post.title}
                                p(style="color: Grey") #{post._.publishedDate.format('YYYY-MM-DD')}
        div(data-role="subpage")#postcontent
            div(data-role="header")
                include services-header.jade
                h1#header
            div(role="main",class="ui-content")
                form(action="user_coupons_add",method="post",enctype="multipart/form-data" data-ajax="false")
                    input(name="coupons_title",id="coupons_title",type="hidden")
                    input(name="coupons_numbers",id="coupons_numbers",type="hidden")
                    input(name="coupons_type",id="coupons_type",type="hidden")
                    input(name="coupons_image",id="coupons_image",type="hidden")
                    input(name="coupons_mark",id="coupons_mark",type="hidden")
                    input(name="coupons_openid",id="openid",type="hidden" value="#{locals.data.openid}")
                    img(id="showImage",style="height:200px;width:100%;")
                    hr
                    h4(name="coupons_store")#coupons_store
                    input(name="coupons_stores",id="coupons_stores",type="hidden")
                    hr
                    h4(name="coupons_contact")#coupons_contact
                    input(name="coupons_contacts",id="coupons_contacts",type="hidden")
                    hr
                    h4(name="coupons_address")#coupons_address
                    input(name="coupons_addresss",id="coupons_addresss",type="hidden")
                    hr
                    h4(name="coupons_details")#coupons_details
                    input(name="coupons_detailss",id="coupons_detailss",type="hidden")
                    hr
                    h4(name="coupons_validDate")#coupons_validDate
                    input(name="coupons_validDates",id="coupons_validDates",type="hidden")
                    hr
                    h4(name="coupons_number")#coupons_number
                    input(name="submit",type="submit",value="点击领取")
