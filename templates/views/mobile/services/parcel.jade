extends content-layout

block content
	div(data-role="page")#main
		div(data-role="header")
				include services-header.jade
				h1.
					配套设施
			div(role="main",class="ui-content")
				ul(data-role="listview")
					each post in data.posts
						li 
							a(href="#postcontent",onclick="loadData(this)",class="postLink",data-transition="slide",data-json=post,data-date=post._.publishedDate.format('YYYY-MM-DD'))
								h2 #{post.title}
								p(style="color: Grey") #{post._.publishedDate.format('YYYY-MM-DD')}
		div(data-role="subpage")#postcontent
			div(data-role="header")
				include services-header.jade
				h1#header
			div(role="main",class="ui-content")
				h2#title
				h4#publishDate
				hr
				p#item
				p#openhr
				p#address
				p#use