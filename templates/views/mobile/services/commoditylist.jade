extends content-layout

block content
	.index
		.index-top-box
			img(src="../../../../images/images/banner4.jpg" style="width:100%; height:100%;")
			each post in data.product
				.index-icon-3
					a(href='javascript:;' onclick="location='commodity?productId=#{post._id}&productname=#{post.product}&storeId=#{locals.data.store._id}'")
						p(class=('#{post.product}' == '日常保洁' ? 'icon' : 'icon-2'))
						p.text #{post.product}
			//-
				.index-icon-3
					a(href='javascript:;' onclick="location='commodity?productId=#{post._id}&storeId=#{locals.data.store._id}'")
						p.icon-2
