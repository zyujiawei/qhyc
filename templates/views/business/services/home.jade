extends content-layout

block content
    div(style="width:100%; height:130px; background-color:#666666;position:fixed;top:0;left:0;z-index:12;")
        label(style="position:absolute; top:30px; left:150px; color:#fff;") ID: #{data.posts._id}
        label(style="position:absolute; top:90px; left:150px; color:#fff;") Title: #{data.posts.nickName}
    div(class="ui-grid-b" style="position:absolute; top:180px; width:100%; height:375px;margin-bottom:-100px;margin-top:10px;")
        a(href='#' ,style=" width:33%; float:left; text-align:center;" onclick="location='business?_id=#{data.posts._id}'")
            img(class="mobile-main-div-img",src="/images/mobile/yijian.png",width="80px;",height="100px;",title="门店列表")
    div(data-role="footer",data-position="fixed",id="mobilefooter",data-tap-toggle="false",style="filter:alpha(opacity=95); -moz-opacity:0.95; opacity:0.95;")
        div(data-role='footer' style="background-color:#e7e5e5; !important")#footernav
            div(data-role='navbar')
                div(style="height:1px;background-color:#e7e5e5;")
                ul
                    li
                        a(class=(section == 'home' ? 'ui-btn-fontcolor' : null),class="fonter",data-ajax="false" onclick="" style="background-image: url(/images/fonter/wuye.png); background-size:25px; color:#979797;") 物业服务
                    li
                        a(class=(section == 'around' ? 'ui-btn-fontcolor2' : null ),class="fonter",data-ajax="false" onclick="" style="background-image: url(/images/fonter/shenghuo.png); background-size:25px; color:#979797;"  ) 本地服务
                    li
                        a(class=(section == 'userCenter' ? 'ui-btn-fontcolor3' : null ),class="fonter",data-ajax="false" style="background-image: url(/images/fonter/wode.png); background-size:25px; color:#979797;" onclick="") 个人中心
                        span#unread(class="badges")
    .fakeloader#load
